<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/task_address"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
	>

   <ScrollView android:id="@+id/task_address_scroll"
   	    android:layout_height="match_parent" 
 		android:layout_width="match_parent"
 		>
 		<LinearLayout android:id="@+id/task_address_scroll_layout" 
       	    android:layout_width="match_parent"
  			android:orientation="vertical" 
  			android:layout_height="wrap_content"
  			>
  			<TextView
    			android:id="@+id/task_title"
   				android:layout_width="match_parent"
    			android:layout_height="wrap_content"
   				android:gravity="center"
    			android:textSize="18sp"
    			android:paddingBottom="10dip"
    			>
			</TextView>
      		<TableLayout android:id="@+id/task_address_values"
   				android:layout_width="match_parent"
   				android:layout_height="wrap_content" 
   				android:stretchColumns="*"
   				android:background="#cccccc"
   				>
   			</TableLayout>
   			<LinearLayout android:id="@+id/task_address_buttons" 
       	    	android:layout_width="match_parent"
  				android:orientation="vertical" 
  				android:layout_height="wrap_content"
  				android:paddingTop="10dip"
  				>
      		</LinearLayout>
      	</LinearLayout>
   	</ScrollView>
</LinearLayout>

